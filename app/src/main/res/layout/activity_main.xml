<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lblValue2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#85C2F3"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="88dp"
        android:layout_height="56dp"
        android:layout_marginTop="200dp"
        android:fontFamily="sans-serif-condensed"
        android:onClick="btnAdd"
        android:text="Add"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp" />

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="88dp"
        android:layout_height="56dp"
        android:layout_marginStart="270dp"
        android:layout_marginTop="200dp"
        android:fontFamily="sans-serif-condensed"
        android:onClick="btnDiv"
        android:text="Div"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblValue1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:fontFamily="sans-serif-black"
        android:text="Value 1 :"
        android:textColor="#170101"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="150dp"
        android:fontFamily="sans-serif-black"
        android:text="Value 2 :"
        android:textColor="#121111"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMul"
        android:layout_width="88dp"
        android:layout_height="56dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="200dp"
        android:fontFamily="sans-serif-condensed"
        android:onClick="btnMul"
        android:text="Mul"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSub"
        android:layout_width="88dp"
        android:layout_height="56dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="200dp"
        android:fontFamily="sans-serif-condensed"
        android:onClick="btnSub"
        android:text="Sub"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="124dp"
        android:layout_height="61dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="270dp"
        android:fontFamily="sans-serif-condensed-light"
        android:onClick="btnClear"
        android:text="Clear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblAnswer"
        android:layout_width="106dp"
        android:layout_height="52dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="350dp"
        android:fontFamily="sans-serif-black"
        android:text="Answer :"
        android:textColor="#100F0F"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtValue1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="85dp"
        android:ems="10"
        android:hint="Enter Number 1"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtValue2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="135dp"
        android:ems="10"
        android:hint="Enter Number 2"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginTop="340dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>